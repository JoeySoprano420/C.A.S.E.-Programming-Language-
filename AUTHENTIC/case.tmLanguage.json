{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "C.A.S.E.",
  "scopeName": "source.case",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#statement-terminator"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.case",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.case",
          "match": "\\b(if|else|while|loop|break|continue|switch|case|default|ret)\\b"
        },
        {
          "name": "keyword.other.case",
          "match": "\\b(Print|Fn|call|let|struct|enum|union|typedef)\\b"
        },
        {
          "name": "keyword.control.concurrency.case",
          "match": "\\b(thread|async|channel|send|recv|sync|parallel|batch|schedule)\\b"
        },
        {
          "name": "keyword.other.io.case",
          "match": "\\b(open|write|writeln|read|close|input|serialize|deserialize|compress|decompress)\\b"
        },
        {
          "name": "keyword.other.security.case",
          "match": "\\b(sanitize_mem|san_mem|sanitize_code|san_code|ping|audit|temperature|pressure|gauge|matrix)\\b"
        },
        {
          "name": "keyword.other.data.case",
          "match": "\\b(mutate|scale|bounds|checkpoint)\\b"
        },
        {
          "name": "keyword.other.graphics.case",
          "match": "\\b(window|draw|render|color|event|widget|layout)\\b"
        },
        {
          "name": "keyword.other.database.case",
          "match": "\\b(connect|query|insert|update|delete|transaction)\\b"
        },
        {
          "name": "keyword.other.network.case",
          "match": "\\b(http|socket|websocket|listen|sendnet|receive)\\b"
        },
        {
          "name": "support.function.math.case",
          "match": "\\b(sin|cos|tan|sqrt|pow|abs|floor|ceil|round|min|max|random)\\b"
        },
        {
          "name": "support.function.string.case",
          "match": "\\b(length|substr|concat|split|join|upper|lower|trim|replace|find)\\b"
        },
        {
          "name": "support.function.collection.case",
          "match": "\\b(push|pop|shift|unshift|slice|map|filter|reduce|sort|reverse|size)\\b"
        },
        {
          "name": "constant.language.case",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "storage.type.case",
          "match": "\\b(int|float|double|bool|char|string|void|auto)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.case",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.case",
              "match": "\\\\(n|t|r|\\\\|\")"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.case",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.case",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.case",
          "match": "\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.comparison.case",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.case",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.case",
          "match": "="
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.case",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        }
      ]
    },
    "statement-terminator": {
      "patterns": [
        {
          "name": "keyword.control.terminator.case",
          "match": "\\[end\\]"
        }
      ]
    }
  }
}
