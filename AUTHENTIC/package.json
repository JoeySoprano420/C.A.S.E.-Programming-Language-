{
  "name": "case-language",
  "displayName": "C.A.S.E. Language Support",
  "description": "Syntax highlighting, snippets, and language support for C.A.S.E. (Code Assisted Syntax Evolution)",
  "version": "1.0.0",
  "publisher": "VioletAuraCreations",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "case",
    "c.a.s.e.",
    "transpiler",
    "programming language"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/VioletAuraCreations/case-language"
  },
  "contributes": {
    "languages": [
      {
        "id": "case",
        "aliases": [
          "C.A.S.E.",
          "case"
        ],
        "extensions": [
          ".case"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/file-icon.svg",
          "dark": "./images/file-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "case",
        "scopeName": "source.case",
        "path": "./syntaxes/case.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "case",
        "path": "./snippets/case.json"
      }
    ],
    "themes": [
      {
        "label": "C.A.S.E. Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/case-dark.json"
      }
    ],
    "commands": [
      {
        "command": "case.compile",
        "title": "C.A.S.E.: Compile Current File"
      },
      {
        "command": "case.run",
        "title": "C.A.S.E.: Compile and Run"
      }
    ],
    "keybindings": [
      {
        "command": "case.compile",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorLangId == case"
      },
      {
        "command": "case.run",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == case"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "C.A.S.E. Configuration",
      "properties": {
        "case.transpilerPath": {
          "type": "string",
          "default": "transpiler.exe",
          "description": "Path to the C.A.S.E. transpiler executable"
        },
        "case.autoCompile": {
          "type": "boolean",
          "default": false,
          "description": "Automatically compile on save"
        },
        "case.showAST": {
          "type": "boolean",
          "default": false,
          "description": "Show AST output when compiling"
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:case",
    "onCommand:case.compile",
    "onCommand:case.run"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.5.0",
    "vsce": "^2.15.0"
  }
}
