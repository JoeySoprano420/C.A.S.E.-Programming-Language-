    Print "x‚ÇÅ = " [end]
    Print "x‚ÇÇ = " [end]
  } else if discriminant == 0 {
    let root = (-b) / (2 * a)
    Print "One repeated real root:" [end]
    Print "x = " [end]
  } else {
    let realPart = (-b) / (2 * a)
